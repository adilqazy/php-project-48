{
    "name": "hexlet/code",
    "description": "Compare files",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/parse.php",
            "src/compare.php"
        ]
    },
    "authors": [
        {
            "name": "keep silent",
            "email": "learn.fllutter@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "phpunit/phpunit": "^12.3"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover build/logs/clover.xml",
        "phpcs": "phpcs --standard=PSR12 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 src/ tests/"
    }
}
